<%= form_for @restaurant do |f| %>
<fieldset>
  <%= f.label :name %>
  <%= f.text_field :name %>
</fieldset>
<fieldset>
  <%= f.label :summary %>
  <%= f.text_field :summary %>
</fieldset>
<fieldset>
  <%= f.label :location %>
  <%= f.text_field :location %>
</fieldset>
<fieldset>
<%= f.label :opening_hours %>
<%= f.text_field :opening_hours %>
</fieldset>
<fieldset>
<%= f.label :vegan_option %>
<%= f.text_field :vegan_option %>
</fieldset>
<%= f.submit %>
<fieldset>
  <%= f.label :restaurant_id, 'Restaurant' %>
  <%= f.collection_select :restaurant_id, Restaurant.all, :id, :name, prompt: 'Please choose the restaurant'  %>
</fieldset>
<% end %>
