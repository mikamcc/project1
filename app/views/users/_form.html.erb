<%= form_for @user do |f| %>

<% if flash[:error] %>
<br>
<strong><%= flash[:error] %></strong>
<br>
<% end %>


<fieldset>
  <%= f.label :name %>
  <%= f.text_field :name %>
</fieldset>
<fieldset>
  <%= f.label :email %>
  <%= f.text_field :email %>
</fieldset>
<fieldset>
  <%= f.label :password %>
  <%= f.text_field :password %>
</fieldset>

<%= f.submit %>

<% end %>
